<h1>Listing songs</h1>


<div class="container">
  <div class="row">
    <div class="col-md-6">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Length</th>
              <th>Description</th>
              <th>Artist</th>
              <th>Album</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

        <%= will_paginate %>
          <tbody>
            <% @songs.each do |song| %>
              <tr>
                <td><%= song.name %></td>
                <td><%= song.length %></td>
                <td><%= song.description %></td>
                <td><%= song.artist['name'] %></td>
                <td><%= song.album['name']  if !song.album.nil? %></td>
                <td><%= link_to 'Show', song %></td>
                <td><%= link_to 'Edit', edit_song_path(song) %></td>
                <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate %>
    </div>
  </div>
</div>
<br>

<%= link_to 'New Song', new_song_path %>
