<h1>Playlists#show</h1>
<p>
  <strong>Name:</strong>
  <%= @playlist.name %>
</p>


<div class="container">
	<div class="row">
		<div class="col-md-6">
			<table class="table">
				<% @songs.each do |song| %>
					<tr>
						<td><%= song.name %></td>
						<td><%= song.length %></td>
						<td><%= link_to song.artist.name, artist_path(song.artist) %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>




<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Delete', @playlist, method:"delete" %> |
<%= link_to 'Back', playlists_path %>
