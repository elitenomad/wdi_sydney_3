<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @artist.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @artist.image %>
</p>

<p>
	<strong>Albums</strong>
	<ul>
		<%  @albums.each do |album| %>
			<li><%= album.name %> <span><a href="/albums/<%= album.id %>"><%= image_tag album.cover_image %></a></span></li>
			
		<% end %>
	</ul>
</p>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<table class="table">
				<% @songs.each do |song| %>
					<tr>
						<td><%= song.name %></td>
						<td><%= song.length %></td>
						<td><%= link_to song.artist.name, artist_path(song.artist) %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>

<%= link_to 'Edit', edit_artist_path(@artist) %> |
<%= link_to 'Back', artists_path %>
