<div class="container">
    <div class="row">
		<div class="col-md-4 col-md-offset-3">
			<form role="form" class="form-horizontal" action='/login' method="POST">
			  <fieldset>
			    <div id="legend">
			      <legend class="">Login</legend>
			    </div>
			    <div>
			      <!-- Username -->
			      <label  for="username">Username</label>
			      <div>
			        <input type="text" id="username" name="username" placeholder="Enter Username" size='50'>
			      </div>
			    </div>
			    <br/>
			    <div>
			      <!-- Password-->
			      <label for="password">Password</label>
			      <div>
			        <input type="password" id="password" name="password" placeholder="Enter Password" size='50'>
			      </div>
			    </div>
			    <div>
			      <!-- Button -->
			      <br/><br/>
			      <div>
			        <button class="btn btn-primary pull-right">Login</button>
			      </div>
			    </div>
			  </fieldset>
			</form>
		</div>
	</div>
</div>
