<div class="container">
<h3>Add a Shelter</h3>
	<div class="row">
		<div class="col-md-4">

			<% if  !@shelter.nil? && @shelter.errors.any? %>
			  <div class="well">
			    <div class="text-danger">
			      The form contains <%= @shelter.errors.count %> errors.
			    </div>
			    <ul>
			    <% @shelter.errors.full_messages.each do |msg| %>
			      <li><p class="text-danger"><%= msg %></p></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>
			<form action="/create" method="post">

				<table class="table">
					<tr>
						<td><label for="name">Name:</label></td>
						<td><input  class="form-control" type="text" name="name" size=50 autofocus /></td>
					</tr>
					<tr>
						<td><label for="description">Description:</label></td>
						<td><textarea name="description" rows="10" cols="75"></textarea></td>
					</tr>
					<tr>
						<td><label for="location">Location:</label></td>
						<td><input class="form-control" type="text" name="location" ></td>
					</tr>
					<tr>
						<td><label for="tot_capacity">Total Capacity:</label></td>
						<td><input class="form-control" type="text" name="tot_capacity" size=50 ></td>
					</tr>
				
					<tr>
						<td></td>
						<td><button class="btn btn-primary pull-right" type="submit" size="30">Add a Shelter</button>
						</td>
						<td><a class="btn btn-default pull-right" href="/shelters" size="30">Back to shelters</button></td>
						
					</tr>
				</table>
			</form>
		</div>
	</div>
</div>